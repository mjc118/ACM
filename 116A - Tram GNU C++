#include <iostream>
#include <string>
#include <cmath>

using namespace std;

int main(){
    int max = 0, numP =0, exit, enter, stops;
    
    cin >> stops;

    for (int i = 0; i < stops; ++i){
        cin >> exit >> enter;
        numP -= exit;
        numP += enter;
        if (numP > max)
            max = numP; 
    }

    cout << max;
    //system("pause");

    return 0;
}
