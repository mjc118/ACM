#include <iostream>
#include <string>
#include <cmath>

using namespace std;

int main(){
    int x = 0, num;
    string input;

    cin >> num;
    
    for (int i = 0; i < num; ++i){
        cin >> input;
        if (input[0] == '+' || input[2] == '+')
            ++x;
        else
            --x;
    }

    cout << x;
    //system("pause");

    return 0;
}
