#include <cstdlib>
#include <iostream>
#include <string>
#include "string.h"
using namespace std;

int main() 
{
    int lines, num;
    string temporary;
    cin >> lines;
    
    for(int i = 0; i < lines; i++){
        cin >> temporary;
        num = temporary.length();
        if(num > 10){
            cout << temporary[0] << (num - 2)
                    << temporary[num - 1] << endl;
        }
        else
            cout << temporary << endl;
        
    }
    return 0;
}
